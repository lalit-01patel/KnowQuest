<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>KnowQuest</display-name>

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>signup.html</welcome-file>
    </welcome-file-list>

    <!-- Signup Servlet -->
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>servlet.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Question List (Home Dashboard) -->
    <servlet>
        <servlet-name>QuestionListServlet</servlet-name>
        <servlet-class>servlet.QuestionListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionListServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Question Detail Page -->
    <servlet>
        <servlet-name>QuestionDetailServlet</servlet-name>
        <servlet-class>servlet.QuestionDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestionDetailServlet</servlet-name>
        <url-pattern>/question</url-pattern>
    </servlet-mapping>

    <!-- Answer Posting -->
    <servlet>
        <servlet-name>AnswerServlet</servlet-name>
        <servlet-class>servlet.AnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnswerServlet</servlet-name>
        <url-pattern>/answer</url-pattern>
    </servlet-mapping>

    <!-- Ask Question -->
    <servlet>
        <servlet-name>AskQuestionServlet</servlet-name>
        <servlet-class>servlet.AskQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AskQuestionServlet</servlet-name>
        <url-pattern>/askQuestion</url-pattern>
    </servlet-mapping>

    <!-- Vote Servlet -->
    <servlet>
        <servlet-name>VoteServlet</servlet-name>
        <servlet-class>servlet.VoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VoteServlet</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>

    <!-- Verify Answer Servlet -->
    <servlet>
        <servlet-name>VerifyAnswerServlet</servlet-name>
        <servlet-class>servlet.VerifyAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyAnswerServlet</servlet-name>
        <url-pattern>/verifyAnswer</url-pattern>
    </servlet-mapping>

    <!-- QR Code Servlet -->
    <servlet>
        <servlet-name>QRCodeServlet</servlet-name>
        <servlet-class>servlet.QRCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QRCodeServlet</servlet-name>
        <url-pattern>/qr</url-pattern>
    </servlet-mapping>

    <!-- Export PDF Servlet -->
    <servlet>
        <servlet-name>ExportPDFServlet</servlet-name>
        <servlet-class>servlet.ExportPDFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExportPDFServlet</servlet-name>
        <url-pattern>/exportPdf</url-pattern>
    </servlet-mapping>

    <!-- Admin Stats Servlet -->
    <servlet>
        <servlet-name>GetAdminStatsServlet</servlet-name>
        <servlet-class>servlet.GetAdminStatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAdminStatsServlet</servlet-name>
        <url-pattern>/getAdminStats</url-pattern>
    </servlet-mapping>

</web-app>